<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_ww_grid_background">

    <Button
        android:id="@+id/btnSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_ww_btn_sound_owl"/>
    <Button
        android:id="@+id/btnResultsXout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_ww_btn_bat_xout"
        android:layout_alignParentRight="true"
        android:onClick="closeResults"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_ww_field_numbers"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Number:"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/txtGameNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_ww_field_numbers"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Times Played:"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#ffffff"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutResults"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_ww_plat_deep_blue">
        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR RESULTS"
            android:layout_marginTop="18dp"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wizard Score"
            android:layout_below="@+id/lbl1"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/badge1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/line1"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/txtWizardScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="340"
            android:layout_below="@+id/lbl2"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"/>
        <View
            android:id="@+id/line1"
            android:layout_below="@+id/txtWizardScore"
            android:layout_width="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/lbl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longest Word"
            android:layout_below="@+id/txtWizardScore"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/txtLongestWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="340"
            android:layout_below="@+id/lbl3"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/badge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/line2"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/line2"
            android:layout_below="@+id/txtLongestWord"
            android:layout_width="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/lbl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Scoring Word"
            android:layout_below="@+id/txtLongestWord"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/txtBestScoringWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_below="@+id/lbl4"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/badge3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/line3"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/line3"
            android:layout_below="@+id/txtBestScoringWord"
            android:layout_width="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/lbl5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Words Found"
            android:layout_below="@+id/txtBestScoringWord"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/txtWordsFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_below="@+id/lbl5"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"/>
        <ImageView
            android:id="@+id/badge4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/line4"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/line4"
            android:layout_below="@+id/txtWordsFound"
            android:layout_width="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <ImageView
            android:id="@+id/badge5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line4"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/lbl6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word Point Average"
            android:layout_below="@+id/txtWordsFound"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/txtWordAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_below="@+id/lbl6"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"/>

    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTopScores"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ic_ww_btn_nav_top_scores"
        android:layout_below="@+id/layoutResults"
        android:onClick="gameTopResults"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnYourWords"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_ww_btn_nav_your_words"
        android:layout_below="@+id/layoutResults"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/btnTopScores"
        android:onClick="yourWords"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_ww_logo_primary_logo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>