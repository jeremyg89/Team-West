<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_ww_grid_background">

    <Button
        android:id="@+id/btnSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_ww_btn_sound_owl"/>
    <Button
        android:id="@+id/btnResultsXout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_ww_btn_bat_xout"
        android:layout_alignParentRight="true"
        android:onClick="closeYourWords"/>
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_ww_field_numbers"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Number:"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/GameNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,550,472"
            android:textColor="#ffffff"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Words Found"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/layout1"/>

    <RelativeLayout
        android:id="@+id/layoutResults"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout1"
        android:background="@drawable/ic_ww_plat_deep_blue">
        <ListView
            android:id="@+id/listWords"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWords"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ic_ww_btn_nav_words"
        android:layout_below="@+id/layoutResults"
        android:onClick="wordsResults"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenu"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_ww_btn_nav_menu"
        android:layout_below="@+id/layoutResults"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/btnWords"
        android:onClick="closeYourWords"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_ww_logo_primary_logo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>