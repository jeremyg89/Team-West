<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_ww_plat_deep_red">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_ww_icon_account" />

    <TextView
        android:id="@+id/lblAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="30dp"
        android:text="ACCOUNT"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    ImageButton
        android:id="@+id/btnAccountXout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_ww_btn_work_xout_disc" />

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lblAccount"
        android:text="USER ID"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtUserId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUser"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_ww_field_name"
        android:gravity="center"
        android:text="12345"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUserId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="NICKNAME"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAccountNickname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNickname"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_ww_field_name"
        android:gravity="center"
        android:text="nickname"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvNickname"
        android:layout_toRightOf="@+id/txtAccountNickname"
        android:background="@drawable/ic_ww_icon_edit_field" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAccountNickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="ACCOUNT EMAIL"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAccountEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_ww_field_name"
        android:gravity="center"
        android:text="EMAIL"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvEmail"
        android:layout_toRightOf="@+id/txtAccountEmail"
        android:background="@drawable/ic_ww_icon_edit_field" />

</RelativeLayout>