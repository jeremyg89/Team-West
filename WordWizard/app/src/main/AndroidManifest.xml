<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wordwizard">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ww_icon_wizardhat"
        android:label="Word Wizard"
        android:background="@drawable/ic_ww_logo_primary_logo"
        android:roundIcon="@drawable/ic_ww_icon_wizardhat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity android:name=".NewGame"></activity>
        <activity android:name=".GameMenu"></activity>
        <activity android:name=".GameResults"></activity>
        <activity android:name=".Timer"></activity>
        <activity android:name=".GameAffirmation"
            android:theme="@style/AppTheme.PopAccountTheme"></activity>
        <activity android:name=".PopAccount"
            android:theme="@style/AppTheme.PopAccountTheme"></activity>
        <activity android:name=".PopTutorial"
            android:theme="@style/AppTheme.PopAccountTheme"></activity>
        <activity android:name=".PopSignIn"
            android:theme="@style/AppTheme.PopAccountTheme"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PopUp"></activity>
        <activity android:name=".RegisterUser"
            android:theme="@style/AppTheme.PopAccountTheme"></activity>
    </application>

</manifest>